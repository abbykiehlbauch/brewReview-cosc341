<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130sp"
            android:layout_marginTop="15sp"
            android:fontFamily="serif"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <ImageView
        android:id="@+id/userProfile"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="75sp"
        android:contentDescription="User Icon"
        android:background="@drawable/profileicon"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="130sp"
        android:fontFamily="serif"
        android:hint="@string/search"
        android:minHeight="48dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300sp"
        android:layout_marginTop="140sp"
        android:fontFamily="serif"
        android:minHeight="48dp"
        android:contentDescription="SORT BY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        android:id="@+id/breweriesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:divider="@color/claret"
        android:layout_marginTop="180sp"
        android:layout_marginStart="10sp"
        android:dividerHeight="4sp"
        android:listSelector="@color/gamboge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/brewery1"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="180sp"
            android:contentDescription="KBC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/brewery2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="230sp"
            android:contentDescription="Shoreline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/brewery3"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="280sp"
            android:contentDescription="Red Bird"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/brewery4"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="330sp"
            android:contentDescription="Bad Tattoo"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/brewery5"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="380sp"
            android:contentDescription="brewery5"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/brewery6"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="430sp"
            android:contentDescription="brewery6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>